<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewModels="clr-namespace:WebServiceClientG2.UI.Popups"
    x:Class="WebServiceClientG2.UI.Popups.WebServicePopup"
    x:DataType="viewModels:WebServicePopupViewModel"
	CanBeDismissedByTappingOutsideOfPopup="false"
    VerticalOptions="End"
	HorizontalOptions="Fill"
	Color="Transparent">

	<Border 
        BackgroundColor="#333333"
        StrokeShape="{RoundRectangle CornerRadius=10}"
        Padding="10"
        StrokeThickness="0"
		HorizontalOptions="Fill"
		HeightRequest="250">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>

			<!-- Toolbar with Title and Close Button -->
			<Border
                Grid.Row="0"
                BackgroundColor="{Binding PopupColor}" 
                StrokeShape="{RoundRectangle CornerRadius=5}"
                Padding="10,5"
                HeightRequest="50">

				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>

					<Label
						Grid.Column="0"
                        Text="{Binding Title}" 
                        TextColor="White"
                        FontAttributes="Bold"
                        FontSize="16"
                        VerticalOptions="Center" />

					<Button
					    Grid.Column="1"
                        Text="4"
                        Command="{Binding ClosePopupCommand}"
					    BackgroundColor="Transparent"
                        TextColor="White"
                        FontSize="16"
					    FontFamily="ExaCommonFont"
                        WidthRequest="50"
                        HeightRequest="50"
					    HorizontalOptions="End"
                        VerticalOptions="Center" />
				</Grid>
			</Border>

			<!-- Error Message Content -->
			<Label
                Grid.Row="1"
				Padding="0,15,0,0"
                Text="{Binding Message}" 
                TextColor="White"
                FontSize="14"
                HorizontalTextAlignment="Center"
                Margin="0,10,0,0" />
		</Grid>
	</Border>

</toolkit:Popup>

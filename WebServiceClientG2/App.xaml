<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WebServiceClientG2"
             x:Class="WebServiceClientG2.App">
    <Application.Resources>
        <ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="Resources/Styles/Colors.xaml" />
				<ResourceDictionary Source="Resources/Styles/Styles.xaml" />
			</ResourceDictionary.MergedDictionaries>

			<Style TargetType="ContentPage" x:Key="ContentPageTheme">
				<Setter Property="BackgroundColor" Value="Black" />
			</Style>

			<Style TargetType="Entry" x:Key="EntryColorTheme" ApplyToDerivedTypes="True">

				<Setter Property="TextColor" Value="#ffffff" />
				<Setter Property="Background" Value="Black"/>
				<Setter Property="BackgroundColor" Value="Black"/>
				<Setter Property="IsSpellCheckEnabled" Value="false"/>
				<Setter Property="IsTextPredictionEnabled" Value="false"/>

			</Style>

			<!--Expander header caption-->
			<Style TargetType="Label" x:Key="expanderHeaderCaption" ApplyToDerivedTypes="True">
				<Setter Property="FontSize" Value="14"/>
			</Style>

			<!--Expander header arrow-->
			<Style TargetType="Label" x:Key="expanderHeaderArrow" ApplyToDerivedTypes="True">
				<Setter Property="FontSize" Value="26"/>
				<Setter Property="FontAttributes" Value="Bold"/>
			</Style>

			<!--ACTIVITY INDICATOR-->
			<Style TargetType="ActivityIndicator" x:Key="ActivityIndicatorStyle" ApplyToDerivedTypes="True">
				<Setter Property="VerticalOptions" Value="CenterAndExpand"/>
				<Setter Property="HorizontalOptions" Value="CenterAndExpand"/>
				<Setter Property="Color" Value="{StaticResource ActivityIndicatorColor}" />
			</Style>
			
		</ResourceDictionary>
    </Application.Resources>
</Application>
